<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="130dp"
        android:text="개인 정보 및 수집 이용에 동의 하시겠습니까? (필수)"
        android:textColor="#8d8d8d"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="135dp"
        android:layout_toRightOf="@+id/text"
        android:src="@drawable/see_all"
        android:text="전문보기" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:src="@drawable/unchecked" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:text="동의하기"
        android:textColor="#545454"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="1000dp"
        android:layout_height="0.3dp"
        android:layout_below="@+id/check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#8d8d8d" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="70dp"
        android:text="항공권 조회하기"
        android:textColor="#545454"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/passport_id"
        android:layout_width="1200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/view"
        android:layout_marginTop="62dp"
        android:layout_marginRight="90dp"
        android:layout_toRightOf="@+id/text2"
        android:src="@drawable/passport_id" />

    <EditText
        android:id="@+id/passport_id_edit"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="67dp"
        android:layout_toRightOf="@+id/text2"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="여권번호를 입력해주세요"
        android:src="@drawable/passport_id"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/go_next" />

</RelativeLayout>