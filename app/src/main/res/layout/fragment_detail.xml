<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_1" />

            <ImageView
                android:id="@+id/listImage"
                android:layout_width="650dp"
                android:layout_height="450dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/meal_1" />

            <Button
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="video"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/detailtab"
                android:layout_width="500dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                app:tabGravity="fill"
                app:tabIndicatorColor="#646464"
                app:tabIndicatorHeight="5dp"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabTextColor="#000000" />

            <android.support.v4.view.ViewPager
                android:id="@+id/detailpager"
                android:layout_width="500dp"
                android:layout_height="447dp"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/select_message"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginLeft="210dp"
        android:layout_marginBottom="35dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:src="@drawable/select_message" />

    <Button
        android:id="@+id/obutton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/order" />

</FrameLayout>